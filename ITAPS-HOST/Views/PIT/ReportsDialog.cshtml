<div class="row">
    <div class="col-md-6" style="margin:30px auto 0px auto;">
        <div style="height: 500px; border: 2px solid silver; position: relative; background: white;">
            <form>
                <div style="padding: 20px 0px;text-align: center">
                    <h3>PIT Reports</h3>
                    <i>Please select the appropriate fields and click the Preview Report button to view your report</i>
                </div>

                <div class="form-group" style="margin-top: 20px;">
                    <div class="col-md-12 formField">
                        <label for="typesOfReport" class="col-form-label">
                            <b>Type Of Report</b>
                        </label>
                        <select type="text" id="typesOfReport" class="form-control" required>
                            <option selected="selected">Select Type</option>
                            <option value="1">All PIT Returns</option>
                            <option value="2">PIT Returns with Tax Outstanding</option>
                            <option value="3">PIT Returns with Tax Over payment Outstanding balance</option>
                            <option value="4">PIT Return with Zero Tax Outstanding balance</option>
                        </select>
                    </div>
                    <div class="col-md-12 formField">
                        <label for="listOfTaxOffices" class="col-form-label">
                            <b>Tax Office</b>
                        </label>
                        <select type="text" id="listOfTaxOffices" class="form-control" required>
                        </select>
                    </div>
                    <div class="col-md-12 formField">
                        <label for="assessmentYear" class="col-form-label">
                            <b>Assessment Year</b>
                        </label>
                        <select type="text" id="assessmentYear" class="form-control yearsDropdown" required>
                            <option selected="selected">Choose Year</option>
                        </select>
                    </div>
                </div>
            </form>
            <div class="col-md-12" style="position: absolute; bottom: 10px; padding-top: 10px;">
                <button class="btn btn-success" id="viewRTP" style="float: right;" disabled><span class='fa fa-file fa-lg'></span> Preview Report</button>
            </div>

        </div>
    </div>
</div>

